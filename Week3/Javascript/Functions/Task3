
function evenorodd(num){
let sum=0
while(num!==0){
    let digit=num%10
    sum+=digit
    num=Math.floor(num/10)
}
console.log(sum);
if(sum%2==0){
    console.log(`${sum} is the sum of the given number which is Even `)
}
else{
    console.log(`${sum} is the sum of the given number which is Odd`)
}
}
evenorodd(234)
